<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:background="@android:color/transparent">

    <!-- 显示当前时间的 TextView -->
    <TextView
        android:id="@+id/current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="78sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="00:00"/>


    <TextView
        android:id="@+id/alarm_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="60dp"
        android:text="Alarm Title"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/button_remind_later"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alarm_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="36dp"
        android:layout_marginRight="155dp"
        android:layout_centerHorizontal="true"
        android:text="十分钟后提醒" />

    <!-- -->
    <com.example.demobaidumap.ui.components.UnlockView
        android:id="@+id/unlock_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:layout_below="@+id/button_remind_later"
        app:unlock_hint_text="向右滑动解锁" />

</RelativeLayout>
